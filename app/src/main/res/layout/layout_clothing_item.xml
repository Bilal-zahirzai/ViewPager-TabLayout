<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/clothingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img2" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/clothingImage"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="عنوان لباس"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="700"
            android:layout_below="@id/title"
            android:layout_alignParentRight="true"
            android:id="@+id/clothingViewCount"
            android:paddingLeft="10dp"/>

        <ImageView
            android:id="@+id/visits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/clothingViewCount"
            android:layout_alignBottom="@id/clothingViewCount"
            android:layout_marginTop="0dp"
            android:layout_marginRight="-6dp"
            android:layout_marginBottom="0dp"
            android:layout_toLeftOf="@id/clothingViewCount"
            android:src="@drawable/ic_baseline_visibility_24" />

    </RelativeLayout>
</RelativeLayout>